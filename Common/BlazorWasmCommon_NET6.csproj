    <EmbeddedResource Remove="Pages\DocumentProcessing\**" />
    <None Remove="Controllers\**" />
    <None Remove="Pages\DocumentProcessing\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="bin\**" />
    <Content Remove="bin\**" />
    <None Remove="bin\**" />
    <Compile Remove="obj\**" />
